$primaryColor = rgb(223,72,72)
$primaryColor-r = red($primaryColor)
$primaryColor-g = green($primaryColor)
$primaryColor-b = blue($primaryColor)

$editorWidth = (100 - 60) // SET EDITOR WIDTH
$previewWidth = (100 - ($editorWidth))



html, section, body, p, h1, h2, div, span, input, textarea, label, a {
	padding: 0
  margin: 0
  border: none
  outline: none
  font-size: 100% 
  text-decoration: none
  color: rgb(70,70,70)
  text-decoration none
  font-weight normal
  font-family "San Francisco Text"
}

html, body {
  background rgb(255,255,255)
  width 100%
  height: 100%
  min-height: 600px
  position: relative
  overflow hidden
}