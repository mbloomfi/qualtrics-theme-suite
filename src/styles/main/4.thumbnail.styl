#thumbBox {
	position absolute
	background-color rgba(55,95,245, .05)
	outline 3px solid rgb(55,95,245)
	z-index 100000
}

#thumbInterface {
	position absolute
	background-color rgb(55,95,245)
	z-index 100000
	bottom 0
	left 0
	height 250px
	width 150px
	color white
	padding 10px
	box-shadow 0 0 25px 2px rgba(0,0,0,.55)
	.sizeControls {
		color white
		.interface-header {
			font-size 20px
			text-align center
			margin 0 0 5px
		}
		.thumbSizeBtn {

			&.increase-thumb-size {
				text-align center
				width 35px
				height 35px
				line-height 35px
				margin 10px auto
				font-size 30px
				border 2px solid white
				border-radius 50%
				background-color rgba(0,0,0,.1)
			}
			&.decrease-thumb-size {
				text-align center
				width 35px
				height 35px
				line-height 35px
				margin 0 auto 20px
				font-size 30px
				border 2px solid white
				border-radius 50%
				background-color rgba(0,0,0,.1)
			}
		}
			
			
	}
	
}