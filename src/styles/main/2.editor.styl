$dropdown-menus-color = rgba(75,70,70,.85)

section#editor {
	position fixed
	top 0
	left 0
	height 100%
	width ($editorWidth)%
	color white
	background-color rgb(36,36,36)
	border-right 7px solid $primaryColor
	box-sizing border-box
	overflow-x scroll
	overflow-y hidden
	transition left .5s ease
	
	section#sectionInner {
		min-width 500px
		max-height 100%
		min-height 100%
		height 100%
		color inherit
		
		div#editorBar {
			background-color rgb(55,55,55)
			width 100%
			min-width 500px
			height ($editorBarHeight)%
			color inherit
			position relative
			top 0
			left 0
			z-index 10

			@media screen and (max-height:600px) {
				height ($editorBarHeight + $heightChange)%
			}
			
			@media screen and (min-height:1200px) {
				height ($editorBarHeight - ($heightChange * 0.5))%
			}
			
			div#editorBarInner {
				height 30px
				line-height 30px
				width 100%
				position relative
				top 50%
				transform translateY(-50%)
				

				
				div#brandName {
					color inherit
					height 100%
					float left
					font-size 1.25em
					padding 0 10px
					margin 0 10px
					max-width 250px
					// overflow hidden
					position relative
					
					// background-color orange
					
					& div.dropdown {
						// overflow hidden
						height 0
						width 200px
						background-color $dropdown-menus-color
						box-shadow 0 3px 10px rgba(0,0,0,.4)
						position absolute
						top 150%
						left 0
						outline 1px solid rgba(0,0,0,.2)
						&:before {
							content ""
							display block
							width 0
							height 0
							position absolute
							top -15px
							left 10px
							border-left 15px solid transparent
							border-right 15px solid transparent
							border-bottom 15px solid rgba(75,70,70,.85)
							
						}
						&.show {
							height 300px
						}
						& div#searchBrandsContainer {
							padding 0
							height 35px
							input#searchBrands {
								display block
								width 100%
								background-color rgba(255,255,255,0)
								height 100%
								color rgb(255,255,255)
								text-indent 4px
							}
						}
						& #recentBrands {
							border-top: 1px solid rgb(120,120,120)
							border-bottom: 1px solid rgb(120,120,120)
							height 230px
							box-sizing border-box
						}
						& #newBrand {
							line-height 35px
							padding 0 4px
						}
					}
				}
				
				span.arrow {
					color inherit
					display inline-block
					margin 0 4px
					height 100%
					float left
				}
				
				div#projectName {
					color inherit
					height 100%
					float left
					font-size 1.25em
					padding 0 10px
					margin 0 10px
					max-width 250px
					// overflow hidden
					position relative
					// background-color purple
					
				}
			}
		}
		
		#codemirror-wrapper {
			height ($codemirrorHeight)%
			width 100%
			min-width 400px
			position absolute
			top ($editorBarHeight)%
			left 0
			z-index 5
			@media screen and (max-height:600px){
				height ($codemirrorHeight - $heightChange)%
				top ($editorBarHeight + $heightChange)%
			}
			@media screen and (min-height:1200px){
				height ($codemirrorHeight + ($heightChange * 0.5))%
				top ($editorBarHeight - ($heightChange * 0.5))%
			}
		}
		
		.btn {
			background-color rgba(255,255,255,0)
			cursor pointer
			transition background-color .3s ease
			
			&:hover {
				background-color rgba(255,255,255,.2)
			}
		}
	}
	

	
	&.hide {
		left -100%
	}
	
	@media screen and (max-width:1200px) {
		section#sectionInner {
			div#editorBar {
				font-size 80%
				div#brandName {

				}
				
				div#projectName {

				}

			}
		}
	}


}