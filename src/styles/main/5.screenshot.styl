#screenshotInterface {
	position absolute
	background-color rgb(250,155,30)
	z-index 100000
	bottom 0
	left 0
	height 90px
	width 150px
	color white
	padding 10px
	border-top-right-radius 2.5px
	border 1px solid rgba(0,0,0,.55)
	box-shadow 0 0 25px 2px rgba(0,0,0,.55)
	.interface-header {
		font-size 20px
		text-align center
		margin 0 0 5px
	}
	section {
		color white
		text-align center
		
		.screenshotSizeBtn {
			display inline-block
			text-align center
			width 35px
			height 35px
			line-height 35px
			margin 5px 10px 30px
			font-size 30px
			border 2px solid white
			border-radius 50%
			background-color rgba(0,0,0,.1)
			cursor pointer
			user-select none
			&:hover {
				background-color rgba(0,0,0,.2)
			}
			
			&.decrease-screenshot-size {
			}
			&.increase-screenshot-size {
			}
			
		}
		
		a.interface-camera {
			height 35px
			width auto
			display inline-block
			padding 10px
			border-radius 2px
			background-color rgba(255,255,255,0)
			user-select none
			box-shadow  0 0 0 0 rgba(0,0,0,0),  0 0 0 0 rgba(0,0,0,0) 
			transition background-color .3s ease, box-shadow .3s ease
			img {
				height 100%
				width auto
				opacity 1
				user-select none
				pointer-events none
				transition opacity .3s ease
			}
			&:hover {
				background-color rgba(255,255,255,.05)
				box-shadow 0 5px 5px -5px rgba(0,0,0,0), 0 2.5px 7px 2px rgba(0,0,0,.3) 
			}
			&:active {
				img {
					opacity .95
				}
				background-color rgba(0,0,0,.25)
				box-shadow inset 0 8px 9px -6px rgba(0,0,0,.35), inset 0 -5px 4px -5px rgba(200,200,200,.20) 
			}
			
		}
		

			
			
	}
	
	
	
}