$primaryColor = rgb(223,72,72)
$primaryColor-r = red($primaryColor)
$primaryColor-g = green($primaryColor)
$primaryColor-b = blue($primaryColor)

$font-stack = "Source Sans Pro", "Helvetica Neue"

$editorWidth = (100 - 60)
$editorBarHeight = (100 - 95)
$codemirrorHeight = (100 - ($editorBarHeight))

$previewWidth = (100 - ($editorWidth))

$heightChange = 2.5


// Global Mix-ins
lighterShade(_color){
  rgb(red(_color) + 12, green(_color) + 12, blue(_color) + 12)
}
darkerShade(_color){
  rgb(red(_color) - 12, green(_color) - 12, blue(_color) - 12)
}
increaseOpacity(color){
  alphaVal = alpha(color)
  alpha(color, alphaVal+2)
}
decreaseOpacity(color){
  alphaVal = alpha(color)
  alpha(color, alphaVal-2)
}


