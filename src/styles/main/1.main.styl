html, body, p, h1, h2, input, textarea, label, a {
  padding 0
  margin 0
  border none
  outline none
  font-size 100% 
  text-decoration none
  color rgb(70,70,70)
  text-decoration none
  font-weight normal
  font-family $font-stack
}

pre, xmp, plaintext, listing {
  font-family: "Source Code Pro", menlo, monospace;
}

html, body {
  background rgb(255,255,255)
  width 100%
  height 100%
  min-height: 500px
  position: relative
  overflow hidden
}

div.dimmer {
  height 100%
  width 100%
  position fixed
  top 0
  left 0
  background-color rgba(0,0,0,.4)
  z-index 1000
  opacity 0
  box-shadow inset 0 150px 150px -30px rgba(0,0,0,.25)
  transition opacity .5s ease
  
  &.show {
    opacity 1
  }
  
}


#image_preview_container {
  position absolute
  top 50%
  left 50%
  transform  translate(-50%, -50%)
  padding 45px 10px 10px
  min-width 100px
  min-height 50px
  borderRadius 2px
  user-select none
  pointer-events none
  box-shadow 0 4px 20px rgba(0,0,0,.5) 
  &.light {
    background-color rgb(240,240,240)
    border 1px solid rgb(200,200,200)
  }
  &.dark {
    background-color rgb(50,50,50)
    border 1px solid rgb(20,20,20)
  }
}
.change-image-bg-cont {
  height 25px
  width 25px
  border-radius 50%
  position absolute
  top 10px
  right 10px
  display block
  margin 0 auto
  cursor pointer
  pointer-events all
  &.light {
    background-color rgb(240,240,240)
  }
  &.dark {
    background-color rgb(50,50,50)
  }
}

