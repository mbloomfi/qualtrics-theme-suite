// ----------------------
// RESETS
// ----------------------
html, body, p, h1, h2, input, textarea, label, a, button {
  padding 0
  margin 0
  border none
  outline none
  font-size 100% 
  text-decoration none
  color rgb(70,70,70)
  text-decoration none
  font-weight normal
  font-family $font-stack
}
pre, xmp, plaintext, listing {
  font-family: "Source Code Pro", menlo, monospace;
}