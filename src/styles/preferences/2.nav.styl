$primaryColor = rgb(223,72,72)

nav#nav {
	height 100%
	width 25%
	position absolute
	top 0
	left 0
	background red
	transition left .3s ease

	div.nav_option {
		-webkit-app-region: no-drag;
		height (($navHeight * 0.2)px)
		box-sizing border-box
		background rgb(60,60,60)
		color white
		line-height (($navHeight * 0.2)px)
		padding 0 0 0 20px
		font-size 32px
		text-transform uppercase
		cursor pointer
		transition background .25s ease, color .25s ease
		&:hover {
			background rgb(90,90,90)
			// background white
			// color rgb(60,60,60)
		}
		&.current {
			background-color rgb(120,120,120)
		}
	}
	&.hide {
		left -300px
	}
}