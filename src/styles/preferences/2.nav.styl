$primaryColor = rgb(223,72,72)

nav#nav {
	height 100%
	width 25%
	position absolute
	top 0
	left 0
	transition left .3s ease

	div.nav_option {
		position relative
		-webkit-app-region no-drag
		height (($navHeight * 0.2)px)
		box-sizing border-box
		background rgb(60,60,60)
		color white
		width 100%
		line-height (($navHeight * 0.2)px)
		padding 0 0 0 20px
		font-size 32px
		text-transform uppercase
		cursor pointer
		z-index 10
		
		transition width .25s ease, background .25s ease, color .25s ease
		&:hover {
			background rgb(90,90,90)
		}
		&.current {
			width 107%
			background-color rgb(120,120,120)
		}
	}
	&.hide {
		left -300px
	}
}