section#panel {
	background-color rgba(40, 180, 50, 0)
	position absolute
	top 0
	right 0
	height 100%
	width 75%
	opacity 1
	font-size 1.75em
	transition opacity .3s ease
	
	div#preferences_splash {
		height 100%
		line-height 500px
		font-size 2em
		text-align center
		color rgb(200,200,200)
	}

	form {
		position relative
		z-index 10
		width 70%
		left 10%
		top 10%
		// background red
		-webkit-app-region no-drag
		
		label {
			display block
			&:after {
				content ""
				display block
				clear both
			}
		}
		
		h2 {
			margin 0 0 5px
		}
		
		div.fieldSet {
			width 100%
			margin 0 0 15px 0
			&:after {
				content ""
				display block
				clear both
			}
		}


		input {
			font-size 21px
			padding 3px 0
			display block
			min-width 90%
			outline 2px solid rgb(215,215,215)
			margin 0 0 15px
			text-indent 2px
			border none
			transition outline .25s ease
			
			&:focus {
				outline-offset 0
				outline 2px solid rgb(190,190,190)
			}
			
			&.thumbnailName {
				width 40%
				display inline-block
				min-width 50%
				margin 0 10px 0 0
				float left
			}
		}
		label.radioLabel {
			display block
			line-height 1
			padding 0
			margin 0 0 5px
			font-size 18px
			input {
				padding 0
				display inline-block
				margin 0 0 0 10px
				background transparent
				outline none
				height 15px
				width 15px
			}
			span {
				font-size 14px
			}
		}
		button {
			font-size 16px
			background-color rgb(110,110,110)
			color white
			padding 5px 10px
			cursor pointer
			display block
			// box-shadow 0 3px 4px rgba(0,0,0,.1)
			&:hover {
				background-color rgb(90, 90, 90)
			}
		}
		div.select_cont {
			width 90%
			background-color white
			outline 2px solid rgb(215,215,215)
			select {
				display block
				font-size 18px
				height 30px
				width 100%
				margin 0 0 20px
				text-indent 2px
				background-color rgb(255,255,255)
				background transparent
			}
			&.inline-block {
				width 25%
				float left
				height 33px
				display inline-block
				select {
					display block
					font-size 18px
					height auto
					width 100%
					margin 0
					text-indent 2px
					background transparent
				}
			}
		}
		
		&#preferences_form {
			padding 50px 0 0 0
		}
		
		label#path-to-brands-label {
			span#homeDirectory {
				font-size 14px
				color rgb(120,120,120)
				text-style italic
				display inline-block
				margin 0 5px 0 0
				height 35px
				line-height 35px
				float left
			}
			input#path-to-brands {
				float left
				width 50%
				min-width 0
				display inline-block
			}
		}

	}
	&.hide {
		opacity 0
	}


}

