section#panel {
	// background rgba(200,0,200,.2)
	position absolute
	top 0
	right 0
	height 100%
	width 75%
	opacity 1
	
	// for dev
	font-size 2em
	// line-height 500px
	// text-align center
	transition opacity .3s ease
	
	div#preferences_splash {
		height 100%
		line-height 500px
		font-size 2.6em
		text-align center
		color rgb(200,200,200)
	}

	form {
		position relative
		z-index 10
		width 70%
		left 10%
		top 10%
		// background red
		
		-webkit-app-region no-drag
		input {
			font-size 21px
			padding 3px 0
			display block
			min-width 90%
			outline 2px solid rgb(215,215,215)
			margin 0 0 15px
			text-indent 2px
		}
		button {
			font-size 16px
			background-color rgb(110,110,110)
			color white
			padding 5px 10px
			cursor pointer
			display block
			// box-shadow 0 3px 4px rgba(0,0,0,.1)
			&:hover {
				background-color rgb(90, 90, 90)
			}
		}
		select {
			display block
			font-size 18px
			height 30px
			display block
			min-width 90%
			margin 0 0 20px
			text-indent 2px
			background-color rgb(255,255,255)
			background transparent
		}
		
		&#preferences_form {
			padding 50px 0 0 0
		}
	}
	&.hide {
		opacity 0
	}

}